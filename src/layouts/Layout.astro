---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import '../styles/base.css';
---

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>{title}</title>
  <link rel="icon" type="image/x-icon" href="/assets/favicon.ico" />
</head>

<body class="bg-neutral-800">
  <slot />
</body>

</html>
